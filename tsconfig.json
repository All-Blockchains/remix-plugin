{
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": ".",
    "sourceMap": false,
    "declaration": true,
    "noImplicitAny": false,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2016", "dom", "es5"],
    "paths": {
      "remix-plugin": ["src/index.ts"],
      "@remixproject/engine": ["projects/engine"],
      "@remixproject/plugin": ["projects/client"],
      "@utils": ["projects/utils"],
      "@examples/*": ["examples/*"]
    }
  },
  "exclude": ["node_modules", "old"]
}
